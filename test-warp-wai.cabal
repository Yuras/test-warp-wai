library
  default-language:    Haskell2010
  ghc-options:         -Wall

  hs-source-dirs:      src

  build-depends:       base                     >= 4.8          && < 4.10
                     , bytestring
                     , connection
                     , http-conduit
                     , http-types
                     , wai
                     , warp
                     , warp-tls

  exposed-modules:     Common


executable test-warp-wai
  main-is:             test-warp-wai.hs
  default-language:    Haskell2010
  ghc-options:         -Wall -threaded -O2 -rtsopts -with-rtsopts "-T -N"

  build-depends:       base                     >= 4.8          && < 4.10
                     , test-warp-wai
                     , http-conduit
                     , http-client-tls

